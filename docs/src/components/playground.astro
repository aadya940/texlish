---
import { Playground } from './playground.civet'
import { compile } from '../../../dist/main.js'
import { process } from '../workers/playground.worker.civet'
const src = `# Hello, Texlish!`
const {tex, html} = process({src, complete: true})
---
<Playground client:load complete src={src} compiled={tex} html={html} />

<style lang="stylus" is:global>
  .example
    display: grid
    grid-template-columns: 1fr 1fr
    gap: 1rem
    align-items: stretch
    > *
      margin-top: 0 !important
  textarea
    width: 100%
    height: 100%
    resize: none
    background-color: inherit
    color: inherit
    border: none
    &:focus
      border: none
      outline: none
  pre
    white-space: pre-wrap
    overflow-wrap: anywhere
    background-color: #fff
  :root[data-theme="dark"]
    pre
      background-color: #0a0c10
    .shiki, .shiki span
      color: var(--shiki-dark) !important
      background-color: var(--shiki-dark-bg) !important
      // Optional, if you also want font styles
      font-style: var(--shiki-dark-font-style) !important
      font-weight: var(--shiki-dark-font-weight) !important
      text-decoration: var(--shiki-dark-text-decoration) !important
  a.clear
    display: block
    justify-self: center
    border-radius: 0.5rem
    background: inherit
    color: var(--sl-color-text-accent)
    border: 1px solid var(--sl-color-text-accent)
    padding: 0.1rem 1rem
    cursor: pointer
    &:hover
      color: var(--sl-color-white)
      border-color: 1px solid var(--sl-color-white)
</style>
