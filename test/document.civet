{ testCase } from ./helper.civet

describe '\\begin/\\end{document}', ->
  testCase '''
    add around text
    ---
    Hello, world!
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    Hello, world!
    \\end{document}

  ''', fragment: false

  testCase '''
    existing braced end
    ---
    \\end{document}
    Hello, world!
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    \\end{document}
    Hello, world!
  ''', fragment: false

  testCase '''
    existing braced end with space
    ---
    \\end {document}
    Hello, world!
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    \\end {document}
    Hello, world!
  ''', fragment: false

  testCase '''
    existing begin colon
    ---
    \\begin: document
    Hello, world!
    ---
    \\documentclass[11pt]{article}
    \\begin{document}%
    Hello, world!
    \\end{document}

  ''', fragment: false

  testCase '''
    existing end colon
    ---
    \\end: document
    Hello, world!
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    \\end{document}%
    Hello, world!
  ''', fragment: false

  testCase '''
    existing environment
    ---
    : document
      Hello, world!
    ---
    \\documentclass[11pt]{article}
    \\begin{document}
      Hello, world!
    \\end{document}
  ''', fragment: false

  testCase '''
    begin placement
    ---
    % comment
      % comment
    \\usepackage{foo}
    :: use foo
    :: preamble cheating
    \\foo
      {bar}
    # Hello
    ---
    \\documentclass[11pt]{article}
    % comment
      % comment
    \\usepackage{foo}
    \\usepackage{foo}
    cheating
    \\foo
      {bar}

    \\begin{document}
    \\section{Hello}
    \\end{document}

  ''', fragment: false

  testCase '''
    begin placement before environment
    ---
    : theorem
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    \\begin{theorem}
    \\end{theorem}
    \\end{document}

  ''', fragment: false

  testCase '''
    begin placement before list
    ---
    * hi
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    \\begin{itemize}
    \\item hi
    \\end{itemize}
    \\end{document}

  ''', fragment: false

describe '\\maketitle', ->
  testCase '''
    begin placement before \\maketitle
    ---
    \\maketitle
    Hello
    ---
    \\documentclass[11pt]{article}

    \\begin{document}
    \\maketitle
    Hello
    \\end{document}

  ''', fragment: false

  testCase '''
    existing \\title and \\maketitle
    ---
    \\title{Title}
    \\maketitle
    Hello
    ---
    \\documentclass[11pt]{article}
    \\title{Title}

    \\begin{document}
    \\maketitle
    Hello
    \\end{document}

  ''', fragment: false

  testCase '''
    \\title and no \\maketitle
    ---
    \\title{Title}
    Hello
    ---
    \\documentclass[11pt]{article}
    \\title{Title}

    \\begin{document}
    \\maketitle
    Hello
    \\end{document}

  ''', fragment: false

  testCase '''
    \\title and existing document
    ---
    \\title{Title}
    \\begin{document}
    Hello
    \\end{document}
    ---
    \\documentclass[11pt]{article}
    \\title{Title}
    \\begin{document}
    Hello
    \\end{document}
  ''', fragment: false

describe '::preamble', ->
  testCase '''
    preamble after text
    ---
    Hello
    :: preamble \\newtheorem{thm}{Theorem}
    : thm
    ::preamble \\newtheorem{lem}{Lemma}
    : lem
    ::preamble
      %more text
    ::use foo
    ---
    \\documentclass[11pt]{article}
    \\newtheorem{thm}{Theorem}
    \\newtheorem{lem}{Lemma}

      %more text
    \\usepackage{foo}

    \\begin{document}
    Hello
    \\begin{thm}
    \\end{thm}
    \\begin{lem}
    \\end{lem}
    \\end{document}

  ''', fragment: false

  testCase '''
    preamble before text
    ---
    :: preamble \\newtheorem{thm}{Theorem}
    ::preamble
      %more text
    ::use foo
    Hello
    ---
    \\documentclass[11pt]{article}
    \\newtheorem{thm}{Theorem}

      %more text
    \\usepackage{foo}

    \\begin{document}
    Hello
    \\end{document}

  ''', fragment: false

  testCase '''
    preamble before explicit begin
    ---
    Hello
    :: preamble \\newtheorem{thm}{Theorem}
    ::preamble
      %more text
    ::use foo
    \\begin{document}
    ---
    \\documentclass[11pt]{article}
    Hello
    \\newtheorem{thm}{Theorem}

      %more text
    \\usepackage{foo}
    \\begin{document}
    \\end{document}

  ''', fragment: false

  testCase '''
    preamble inside : document
    ---
    : document
      :: preamble \\newtheorem{thm}{Theorem}
      ::preamble
        %more text
      ::use foo
      Hello
    ---
    \\documentclass[11pt]{article}
      \\newtheorem{thm}{Theorem}
      
        %more text
      \\usepackage{foo}
    \\begin{document}
      Hello
    \\end{document}
  ''', fragment: false

  testCase '''
    ::preamble and ::uses
    ---
    ::preamble \\newtheorem{thm}{Theorem}
    :: use
      amsthm
    ::preamble \\newtheorem{lem}{Lemma}
    \\newtheorem:
      - theorem
      - Theorem
    ---
    \\documentclass[11pt]{article}
    \\newtheorem{thm}{Theorem}

      \\usepackage{amsthm}
    \\newtheorem{lem}{Lemma}
    \\newtheorem
       {theorem}%
       {Theorem}%
    \\begin{document}

    \\end{document}

  ''', fragment: false

  testCase '''
    nested ::preamble
    ---
    Hello
    ::preamble
      before
      ::preamble nested
      after
    ---
    \\documentclass[11pt]{article}

      before
      nested
      after

    \\begin{document}
    Hello
    \\end{document}

  ''', fragment: false

